<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_blue_rounded_5dp">

    <TextView
        android:id="@+id/title_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Sarapan"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/image_daftar"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@id/title_daftar"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_linimasa_picture" />

    <TextView
        android:id="@+id/content_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_daftar"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Cereal"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>