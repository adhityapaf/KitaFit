<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_gravity="center"
    android:padding="25dp">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Atur Reminder"
    android:textSize="22dp"
    android:textStyle="bold"
    android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Reminder"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>
    <EditText
        android:id="@+id/title_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Remind To Me"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date And Time"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>
    <EditText
        android:id="@+id/Date_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableRight="@drawable/ic_datepic"
        android:paddingBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Date and Time"/>

    <Button
        android:id="@+id/btn_tambah_remind"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:text="Add"
        android:textColor="#fff"
        android:maxLines="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        android:background="@drawable/btn_edit"
        />
</LinearLayout>