<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="110dp"
    android:layout_marginLeft="8dp"
    android:background="@drawable/borderr"
    android:id="@+id/programitemRelative"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/gambarr"
        android:layout_centerHorizontal="true"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/polamakan2"
        android:src="@drawable/pushup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push Up"
        android:id="@+id/namaa"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/gambarr"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold" />



</RelativeLayout>

