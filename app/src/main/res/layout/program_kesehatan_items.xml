<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_blue_rounded_5dp"
        android:id="@+id/program_kesehatan_relative">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:elevation="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_stroke_rounded_5dp"
                android:paddingEnd="40dp">

                <ImageView
                    android:id="@+id/foto_program_kesehatan"
                    android:layout_width="100dp"
                    android:layout_height="140dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/blue_stroke_rounded_5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/program_kesehatan_placeholder"

                    />

                <View
                    android:id="@+id/foto_divider"
                    android:layout_width="2dp"
                    android:layout_height="140dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/foto_program_kesehatan"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/judul_program_kesehatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/foto_divider"
                    android:fontFamily="sans-serif"
                    android:text="Judul Prorgram"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ic_gym"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/judul_program_kesehatan"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@id/foto_divider"
                    android:src="@drawable/ic_gym" />

                <TextView
                    android:id="@+id/jumlah_olahraga_program_kesehatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judul_program_kesehatan"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/ic_gym"
                    android:fontFamily="sans-serif"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judul_program_kesehatan"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/jumlah_olahraga_program_kesehatan"
                    android:fontFamily="sans-serif"
                    android:text="Olahraga"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/ic_fire"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/ic_gym"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/foto_divider"
                    android:src="@drawable/ic_fire" />

                <TextView
                    android:id="@+id/jumlah_kalori_program_kesehatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jumlah_olahraga_program_kesehatan"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/ic_fire"
                    android:fontFamily="sans-serif"
                    android:text="120"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jumlah_olahraga_program_kesehatan"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@id/jumlah_kalori_program_kesehatan"
                    android:text="kal"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ic_calendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/ic_fire"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/foto_divider"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/jumlah_durasi_program_kesehatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jumlah_kalori_program_kesehatan"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/ic_calendar"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jumlah_kalori_program_kesehatan"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@id/jumlah_durasi_program_kesehatan"
                    android:fontFamily="sans-serif"
                    android:text="hari"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Detail\nProgram"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold|italic"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>